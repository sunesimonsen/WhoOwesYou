<div class="row">
  <div class="span4">
    <div class="well">
      <h2><%= @arrangement.name =%>
        <small class="pull-right"><%= @arrangement.total_expenses %></small>
      </h2>
      Lorem Ipsum is simply dummy text of the printing and typesetting
      industry.
    </div>
    <div class="well">
      <h2>Help</h2>
      Lorem Ipsum is simply dummy text of the printing and typesetting
      industry. Lorem Ipsum has been the industry's standard dummy
      text ever since the 1500s, when an unknown printer took a galley
      of type and scrambled it to make a type specimen book.
    </div> 
  </div><!--/span-->
  <div class="span8">
    <section id="participants">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Expenses</th>
            <th>Balance</th>
          </tr>
        </thead>
        <tbody>
          <% @participants.each do |p| %>
          <tr onclick="location.href='<%= arrangement_participant_path(@arrangement, p) %>'" class="clickable">
            <td><%= p.name %></td>
            <td class="number"><%= p.total_expenses %></td>
            <td class="number">
              <span class="badge badge-<%= p.in_debt? ? 'important' : 'success' %>">
                <%= p.balance %>
              </span>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      
      <%= form_tag(arrangement_participants_path(@arrangement), :class => "well form-inline") do %>
      <%= label_tag("name", "Add participant:") %>
      <div class="input-append">
        <input type="text" name="name" placeholder="Participant name"><button type="submit" class="btn btn-primary">
          <i class="icon-plus"></i></button>
      </div>
      <% end %>
    </section>
  </div><!--/span-->
</div><!--/row-->
